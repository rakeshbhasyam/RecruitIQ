# RecruitIQ Environment Configuration
# Copy this file to .env and update the values

# Database Configuration - External MongoDB
# Update this URL to point to your MongoDB instance
MONGODB_URL=mongodb://localhost:27017
# For remote MongoDB: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
DATABASE_NAME=agentic_recruitment

# MongoDB Authentication (Optional - for production)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here

# MongoDB Express (Optional - for database management)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=false

# Google Gemini API Key (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Security (Production)
# SECRET_KEY=your_secret_key_here
# JWT_SECRET_KEY=your_jwt_secret_here
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
# LOG_LEVEL=INFO
# LOG_FILE_PATH=/app/logs/app.log

# External Services (if needed)
# REDIS_URL=redis://redis:6379
# CELERY_BROKER_URL=redis://redis:6379/0
